<?xml version="1.0" encoding="ISO-8859-1"?>
<xs:schema targetNamespace="http://nerdizin.org/eztrial/1.0"
           xmlns="http://www.w3.org/2001/XMLSchema"
           xmlns:ez="http://nerdizin.org/eztrial/1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           elementFormDefault="qualified">

    <xs:import namespace="http://www.w3.org/1999/xlink"     schemaLocation="xlink.xsd"/>
    <xs:import namespace="http://www.cdisc.org/ns/odm/v1.3" schemaLocation="ODM1-3-2-foundation-ez.xsd"/>


    <xs:element name="Script">
        <xs:complexType>
            <xs:simpleContent>
                <xs:extension base="xs:string">
                    <xs:attribute name="Trigger" type="xs:string" />
                </xs:extension>
            </xs:simpleContent>
        </xs:complexType>
    </xs:element>

    <xs:element name="Role">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Description" type="xs:string"/>
                <xs:element ref="ez:Privilege" minOccurs="0" maxOccurs="unbounded" />
            </xs:sequence>
            <xs:attribute name="OID" type="xs:string" />
        </xs:complexType>
    </xs:element>

    <xs:element name="Privilege">
        <xs:complexType>
            <xs:simpleContent>
                <xs:extension base="xs:boolean">
                    <xs:attribute name="OID" type="xs:string" />
                </xs:extension>
            </xs:simpleContent>
        </xs:complexType>
    </xs:element>

    <xs:element name="Password">
        <xs:complexType>
            <xs:simpleContent>
                <xs:extension base="xs:string"/>
            </xs:simpleContent>
        </xs:complexType>
    </xs:element>

    <xs:element name="RoleRef">
        <xs:complexType>
            <xs:simpleContent>
                <xs:extension base="xs:string">
                    <xs:attribute name="RoleOID" type="xs:string" />
                </xs:extension>
            </xs:simpleContent>
        </xs:complexType>
    </xs:element>

</xs:schema>
